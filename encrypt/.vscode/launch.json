	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "encrypt",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/src/encrypt.ts",
			"outFiles": [
				"${workspaceFolder}/dist/*.js"
			],
			"args": [ "test.txt", "-p", "secret", "-s" ]
		},
		{
			"type": "pwa-node",
			"request": "launch",
			"name": "decrypt",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/src/decrypt.ts",
			"outFiles": [
				"${workspaceFolder}/dist/*.js"
			],
			"args": [ "test.brad", "-p", "secret" ]
		}
	]
}